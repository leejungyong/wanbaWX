/* pages/cityPartner/cityPartner.wxss */
.city_container{
  background-color: #121a21;
  font-size: 30rpx;
  padding: 80rpx 60rpx 80rpx 60rpx;
}
.textforinput{
  color: #936B25;
}
.textforinput::after{
  content: '*';
  color:red;
}
.input{
  width: 620rpx;
  height: 66rpx;
  border: 2rpx solid #00a0e9;
  margin: 10rpx 0 20rpx 0;
  padding-left: 22rpx;
  border-radius: 6rpx;
  background-color: #1c3043;
  color:#00a0e9 ;
}
.image_box{
  width:110rpx;
  height:110rpx;
  float: left;
}
.upload_input{
  float: left;
  width: 120rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  border: 2rpx solid #00a0e9;
  background-color: #1c3043;
  margin: 36rpx 0 10rpx 10rpx;
  color: #46607D;
  border-radius: 6rpx;
}
.bt_apply{
  width: 232rpx;
  height: 76rpx;
  font-size: 30rpx;
  line-height: 76rpx;
  background-color: #1C3043 ;
  color:rgba(0, 172, 251, 1);
  border: 2rpx solid  #00A0E9;
  margin:220rpx 0 0 180rpx;

}
.toast_box{
  width: 600rpx;
  height: 280rpx;
  background-color:#1c3043;
  text-align: center;
  padding-top: 66rpx;
  border: 2rpx solid #46607d;
  border-radius: 10rpx 10rpx 10rpx 0;
  position: relative;
  top: -450px;
  left: 40px;
  z-index: 9999;
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#000;
  z-index:999;
  top:0;
  left:0;
  opacity:0.5;
}
.toast_box text{
  font-size: 30rpx;
  color: #009ad2; 
}
.return{
  margin-top: 52rpx;
  width: 180rpx;
  height: 54rpx;
  font-size: 30rpx;
  line-height: 54rpx;
  background-color: #1C3043 ;
  color:rgba(0, 172, 251, 1);
  border: 2rpx solid  #00A0E9;
}