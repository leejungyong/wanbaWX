}
.padding{
margin-top:20px;
height:30px;
}
.btn-share{
  
  margin:0 10% 0 10%;
  
  border:1px solid #1989c3;
  width:80%;
  height:30px;
  border-radius: 0;
  background: transparent;
  color:#1989c3;
  text-align: center;
  line-height: 30px;
  font-size:14px;
}
.btn-share::after {
  border: none
}

.btn{
  
  margin:0 10% 0 10%;
  background:transparent;
  border:1px solid #1989c3;
  width:80%;
  height:30px;
  border-radius: 0;
  color:#1989c3;
  text-align: center;
  line-height: 30px;
  font-size:14px;
}
.post{
  width:60%;
  margin: 10px 20% 0 20%;
  display: table;
   vertical-align: middle;
   padding-top: 20px;
}
.border{
  width:90%;
  margin: 10px 5% 10px 5%;
