  padding-bottom: 10px;
}
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  bottom:0;
  background:#121a21;
  overflow: hidden;
  z-index: 990;
  }

.modal-body{
  position:relative;
  }

.modal-content{
  
  width: 80%;
  height:100%; 
  margin:20px 10% 0 10%;
  overflow: hidden;
  border-radius: 10rpx;
  z-index:999;
  color:#946b25;
  font-size: 14px;
  }
  .modal-btn{
   text-align: center;
  }
