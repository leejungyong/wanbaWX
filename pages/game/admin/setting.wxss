  text-align: center;
}
.input{
  margin:0 10% 0 10%;
  background:transparent;
  border:1px solid #24435d;
  width:80%;
  height:30px;
  
  color:#946b25;
  text-align: center;
  line-height: 30px;
}
.input-placeholder{
    color:#89b6db;
  }
.gold{
  color:#946b25;
}
.oranger {
