ec-canvas {
  width: 100%;
  height: 330px;
}
page{
  background: #121a21; 
}
.radar_box {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  box-sizing: border-box;
  padding-top: 60rpx;
} 
.title{
 color:  #936B25 ;
 font-size: 50rpx;
 margin-bottom:20rpx;

}
.txt{
  color: #00A0E9;
  font-size: 30rpx;
}
.concern{
  color: #00A0E9;
  font-size: 30rpx;
  text-align:center;
}

.slogan{
  position: fixed;
  bottom: 70rpx;
  color: #946b25;
}
.linear{
  display: inline-block;
  width: 90rpx;
  height: 2rpx;
  background:-webkit-linear-gradient(left,#121a21,#946b25);
  position:relative;
  bottom:13rpx;
}
.linear2{
  display: inline-block;
  width: 90rpx;
  height: 2rpx;
  background:-webkit-linear-gradient(right,#121a21,#946b25);
  position:relative;
  bottom:13rpx;
}