<view>

  <view style="width:90%;margin:20px 5% 20px 5%;text-align:center;">
    <view style="padding:25px 10px 5px 10px;">

      <view>
        <text style="font-size:14pt">身份认证   </text>
      </view>


    </view>
  </view>
  <view style="width:90%;height:100px;margin:20px 5% 20px 5%;height:40px;line-height:40px;vertical-align: middle;">
    <view>
      <text style="width:20%;float:left;font-size:10pt;height:40px;">手机号：</text>
      <input style="width:80%;float:left;background:#fff;color:#ccc;height:40px;" placeholder="   输入11位手机号码" bindinput="updateTel" type="number" />
    </view>

  </view>

 <view style="width:90%;height:100px;margin:20px 5% 20px 5%;height:40px;line-height:40px;vertical-align: middle;">
    <view>
      <text style="width:20%;float:left;font-size:10pt;height:40px;">验证码：</text>
      <input style="width:50%;float:left;background:#fff;color:#ccc;height:40px;" placeholder="   4位验证码"  bindinput="updateCode"  type="number"  />
      <button style="width:25%;float:left;height:40px;font-size:10pt;margin-left:10px;display:inline-block;" bindtap='sendCode'>验证码</button>
    </view>

  </view>

  <view style="clear:both;"></view>

  <view style="width:50%;margin:20px 25% 20px 25%;">
    <button type="primary" bindtap="verify" style="">确认</button>
  </view>
</view>