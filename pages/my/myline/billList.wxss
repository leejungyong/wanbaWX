/* pages/my/myline/billList.wxss */
page{
 background: #121A21;
 font-size: 30rpx;
 color:#00A0E9;
}
.date_box{
  height: 80rpx;
  line-height:80rpx;
  background-color:rgba(28, 48, 67, 1);
  padding-left: 50rpx;
}

.triangle{
  width:16rpx;
  height:16rpx;
  border:#00A0E9 solid;
  border-width:2rpx 2rpx 0 0;
  transform:rotate(135deg);
  display:inline-block;
  margin-bottom:6rpx;
}
.list_box{
  padding: 25rpx;
}
.card{
  height: 100rpx;
  border-radius: 10rpx;
  border: 2rpx solid rgba(70, 96, 125, 1);
  background: #1C3043;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.card .title{
  color: #936B25;
}
.card .date{
margin-top: 15rpx;
}
.card .right{
  float: right;
  margin-top: 20rpx;
  margin-right: 10rpx;
}