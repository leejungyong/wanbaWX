page{
  background: #121a21; 
}
.swiper image {
  width: 100%;
  height: auto;
}

.navbar{
  flex: none;
  display: flex;
  background: #121a21;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color:#946b25;
}
.navbar .item.active{
  color: #00a0e9;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #00a0e9;
}


.card{
  width:90%;
  height:200rpx;
  margin:10px 5% 0 5%;
  border:1px solid #3a6996;
  border-radius: 5px;
  background: #1c3043;
}
.card .cover {
  padding: 10px 10px 0 10px;
  float: left;
  width: 170rpx;
  height: 160rpx;
  line-height: 200rpx;
}
.card .cover image {
  width: 150rpx;
  height: 120rpx;
  margin-top:15rpx;
}

.card .title {
  color: #946b25;
  padding-left: 10rpx;
  padding-top: 30rpx;
  font-size: 18px;
  height:40rpx;
  line-height: 40rpx;
  overflow:hidden;
  width:260rpx;
    text-overflow: ellipsis;
  white-space: nowrap;
}
.card .route_desc{
  color:#00acfb;
  padding-left:10rpx;
  margin-top:15rpx;
  font-size:12px;
  width:450rpx;
  height:47rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card .date{
  color:#00acfb;
  padding-right:5rpx;
  font-size:12px;
  float:right;
  width:140rpx;
  margin-top:-34rpx;

}
.card .menu{
  color:#5286b6;
  padding-right:5rpx;
  padding-bottom: 10rpx;
  font-size:14px;
  float:right;
  width:140rpx;
  margin-top:10rpx;
}

.txt{
  width:100%;
  /* margin:0 0 100rpx 0; */
  
}
.side{
  height: 100%;  
  width: 80%;  
  position: fixed;  
  background-color: #1c3043; 
  top:0;
  right: 0;
  z-index: 999;
  color: #00acfb;
}

/* 遮罩层 */  
.bg {    
  display: none;    
  position: fixed;    
  top: 0%;    
  left: 0%;    
  width: 100%;    
  height: 100%;    
  background-color: black;    
  /* z-index: 1001;     */
  -moz-opacity: 0.7;    
  opacity: 0.70;    
  transition:width 2s;  
  filter: alpha(opacity=70);    
} 
.filterbox{
  padding: 10rpx 10rpx 10rpx 20rpx ;
  border-bottom: 2rpx solid #3a6996;
  margin-top: 10rpx;
}
.minicard{
  border: 2rpx solid #00acfb;
  border-radius: 10rpx;
  display: inline-block;
  padding:6rpx 10rpx;
  margin:15rpx 10rpx;
}
.keySearch{
  border: 2rpx solid #00a0e9;
  color: #00acfb;
  width: 400rpx;
  padding-left:30rpx;
  border-radius: 50rpx;
  height: 60rpx;
}
.f_button{
  width:160rpx;
  height:70rpx;
  line-height:70rpx;
  border-radius: 6px;
  background-color: rgba(28, 48, 67, 1);
  text-align: center;
  border: 2rpx solid rgba(0, 160, 233, 1);
  color: #00acfb;
  float: left;
  margin:60rpx 0rpx 10rpx 80rpx;
}
.choose{
  background: white;
}
.mask{
  width:650rpx;
  color:#fff;
  background-color: rgba(18,18,18,0.8);
  position: relative;
  height:100rpx;
  bottom:110rpx;
}
.mask .left{
 width:80%;
 float:left;
 display:inline;
 overflow: hidden;
}
.mask .left .top{
  color:#936b25;
  height:50rpx;
  line-height: 50rpx;
  margin-left:20rpx;
  margin-top:10rpx;
  font-size:16px;
   
}
.mask .left .bottom{
  color:#00a0e9;
  height:50rpx;
  line-height: 50rpx;
 font-size:12px;
  margin-left:20rpx;
  margin-top:-15rpx;
}
